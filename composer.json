{
    "name": "babs100/developerstatus",
    "description": "This package show a developer rank based on github repositories",
    "type": "library",
    "license": "MIT",
    "homepage":"https://github.com/babs100/DeveloperStatus",
    "authors": [
        {
            "name": "Babatunde Olajide",
            "email": "obabs78@gmail.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "BabatundeOlajide\\DeveloperStatus\\": "src"
        }
    },
    "autoload-dev": {

    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }

}
